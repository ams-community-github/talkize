{
  "name": "@talkize/monorepo",
  "packageManager": "npm@8.5.0",
  "description": "Welcome to the Talkize monorepo",
  "workspaces": [
    "./packages/*",
    "./aws/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "format": "turbo run format",
    "generate:cfn": "turbo run generate:cfn",
    "deploy": "turbo run deploy",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "test": "turbo run test --filter=!./aws/*",
    "version": "ts-node getPatchVersion.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ams-community-github/talkize.git"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.108",
    "@types/faker": "^5.5.9",
    "@types/flat": "^5.0.2",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@types/rosie": "^0.0.40",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "aws-sdk-client-mock": "^2.0.0",
    "esbuild": "^0.15.13",
    "faker": "^5.5.3",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-junit": "^14.0.1",
    "prettier": "^2.7.1",
    "rosie": "^2.1.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "turbo": "^1.6.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.204.0",
    "@aws-sdk/lib-dynamodb": "^3.204.0",
    "flat": "^5.0.2",
    "fp-ts": "^2.13.1",
    "io-ts": "^2.2.19",
    "uuid": "^9.0.0"
  }
}